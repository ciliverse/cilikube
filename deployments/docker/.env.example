# CiliKube Docker Environment Variables Configuration Example
# Copy this file to .env and modify as needed

# === Application Configuration ===
GIN_MODE=release
CILIKUBE_CONFIG_PATH=/app/configs/config.yaml

# === Database Configuration ===
# MySQL
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=cilikube_db
MYSQL_USER=cilikube_user
MYSQL_PASSWORD=your_secure_password

# === Redis Configuration ===
REDIS_PASSWORD=your_redis_password

# === Monitoring Configuration ===
# Grafana
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password

# === Network Configuration ===
# Port mappings
BACKEND_PORT=8080
FRONTEND_PORT=80
MYSQL_PORT=3306
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# === Storage Configuration ===
# Data volume paths
MYSQL_DATA_PATH=./data/mysql
REDIS_DATA_PATH=./data/redis
PROMETHEUS_DATA_PATH=./data/prometheus
GRAFANA_DATA_PATH=./data/grafana

# === Kubernetes Configuration ===
# Kubeconfig file path
KUBECONFIG_PATH=~/.kube/config

# === Logging Configuration ===
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# === Security Configuration ===
# JWT secret key
JWT_SECRET=your_jwt_secret_key_change_in_production

# === Image Configuration ===
# Image registry and versions
REGISTRY=cilliantech
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest